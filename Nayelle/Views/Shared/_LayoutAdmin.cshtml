<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.PageTitle</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat|Hind+Madurai">
    <link href="/content/css/admin.css?@DateTime.Now.ToFileTime()" rel="stylesheet" />
</head>
<body>
    <nav>
        <div class="wrapper nav-panel">
            <h2>Administrator</h2>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
        <footer>
            <p style="text-align: center;">
                Copyright &copy; @DateTime.Now.Year | All Rights Reserved
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
